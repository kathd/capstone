<h3><%= @trip.trip_title %></h3>
<!-- insert location here -->
<p><%= @trip.start_date %> - <%= @trip.end_date %></p>

<%= button_to "Delete", "/trips/#{@trip.id}", method: :delete, data: { confirm: 'Are you sure?' } %> 

<!-- EDIT TRIP MODAL -->
  <!-- MODAL TRIGGER -->
  <a href="/trips/#{@trip.id}/edit" class="btn btn-primary" 
    data-toggle="modal"
    data-target="#editTripModal">Edit Trip</a>
  
  <!-- MODAL CONTENT -->
  <div class="modal fade" id="editTripModal" tabindex="-1" role="dialog" aria-labelledby="addTripModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Edit <%= @trip.trip_title %> Trip</h4>
          <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
        </div>
          <%= form_tag "/trips/#{@trip.id}", method: :patch do  %>
            <div class="modal-body">
              <%= render partial: "trip_form", locals: {trip: @trip} %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<!-- ADD BOARD MODAL -->
  <!-- MODAL TRIGGER -->
  <button class="btn btn-primary" 
    data-toggle="modal"
    data-target="#addBoardModal">Add Board</button>
  
  <!-- MODAL CONTENT -->
  <div class="modal fade" id="addBoardModal" tabindex="-1" role="dialog" aria-labelledby="addBoardModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Add Board</h4>
          <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
        </div>
        <%= form_tag "/trips/#{@trip.id}", method: :post do  %>
          <div class="modal-body">
            <div>
              Board Title: <input type="text" name="board_title">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add Board</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>



<!-- BOARDS LIST -->

  <% @trip.boards.each do |board| %>
    <div>
      <%= board.board_title %>
      <!-- EDIT BOARD MODAL -->
      <!-- MODAL TRIGGER -->
      <button class="btn btn-link" data-toggle="modal" data-target="#editBoardModal">Edit</button>      
      <!-- MODAL CONTENT -->
      <div class="modal fade" id="editBoardModal" tabindex="-1" role="dialog" aria-labelledby="editBoardModal" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Edit Board</h4>
              <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
            </div>
            <%= form_tag "/trips/#{@trip.id}", method: :patch do  %>
              <div class="modal-body">
                <div>
                  Board Title: <input type="text" name="board_title" value="<%= board.board_title %>">
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>


