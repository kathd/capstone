<h3><%= @trip.trip_title %></h3>
<!-- insert location here -->
<p><%= @trip.start_date %> - <%= @trip.end_date %></p>

<%= button_to "Delete", "/trips/#{@trip.id}", method: :delete, data: { confirm: 'Are you sure?' } %> 

<!-- EDIT TRIP MODAL -->
  <!-- MODAL TRIGGER -->
  <a href="/trips/#{@trip.id}/edit" class="btn btn-primary" 
    data-toggle="modal"
    data-target="#editTripModal">Edit Trip</a>
  
  <!-- EDIT TRIP MODAL CONTENT -->
  <div class="modal fade" id="editTripModal" tabindex="-1" role="dialog" aria-labelledby="addTripModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Edit <%= @trip.trip_title %> Trip</h4>
          <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
        </div>
          <%= form_tag "/trips/#{@trip.id}", method: :patch do  %>
            <div class="modal-body">
              <%= render partial: "trip_form", locals: {trip: @trip} %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<!-- ADD BOARD MODAL -->
  <!-- MODAL TRIGGER -->
  <button class="btn btn-primary" 
    data-toggle="modal"
    data-target="#addBoardModal">Add Board</button>
  
  <!-- ADD BOARD MODAL CONTENT -->
  <div class="modal fade" id="addBoardModal" tabindex="-1" role="dialog" aria-labelledby="addBoardModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Add Board</h4>
          <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
        </div>
        <%= form_tag "/trips/#{@trip.id}/boards", method: :post do  %>
          <div class="modal-body">
            <div>
              Board Title: <input type="text" name="board_title">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add Board</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>



<!-- BOARDS LIST -->
<% @trip.boards.each do |board| %>
  <div>
<!-- BOARD HEADER -->
    <div class="board-header">
      <%= board.board_title %>
    </div>
<!-- BOARD OPTIONS -->
    <div class="board-options">
      <!-- ADD ITEM MODAL -->
      <!-- MODAL TRIGGER -->
      <button class="btn btn-link" 
        data-toggle="modal"
        data-target="#addItemModal">Add Item</button>
      <!-- ADD ITEM MODAL CONTENT -->
      <div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="addItemModal" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Add Item</h4>
              <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
            </div>
            <%= form_tag "#", method: :post do  %>
              <div class="modal-body">
                <div>
                  <%= render partial: "item_form" %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add Item</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <!-- EDIT BOARD MODAL -->
      Edit

    <!-- DELETE BOARD LINK -->
      Delete

    </div>

<!-- ITEMS LIST -->
      <% board.items.each do |item| %>
        <ul>
          <li class="btn btn-link" data-toggle="modal" data-target="showItemModal"><%= item.item_type %> | <%= item.notes %></li><br> <!-- TODO: show only a few characters of the notes--> 
        </ul>
        <!-- SHOW ITEM MODAL CONTENT -->
        <div class="modal fade" id="showItemModal" tabindex="-1" role="dialog" aria-labelledby="addItemModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel"> <%= item.item_type %> </h4>
                <button class="close" data-dismiss="modal" aria-hidden="true">x</button>
              </div>
              <div class="modal-body">
                <p>HEYYYY</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
          </div>
        </div>
      </div>


      <% end %> <!-- END OF ITEM-->
  
  </div> <!-- END OF BOARD --> 
  <br><br>
<% end %>


