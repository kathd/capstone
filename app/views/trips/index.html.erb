<!-- ADD TRIP MODAL -->
  <!-- MODAL TRIGGER -->
  <button class="btn btn-md btn-theme"
    data-toggle="modal"
    data-target="#addTripModal">Add Trip</button>

<br><br>

<!-- TRIPS LIST -->
  <div class="row">
    <% @trips.each do |trip| %>
      <!-- ADD TRIP LOCATION HERE -->
      <% if trip.start_date && trip.end_date %>

        <div class="card" style="width: 35rem;">
          <div class="card-body">
            <h4 class="card-title"><%= trip.trip_title %></h4>
            <h6 class="card-subtitle mb-2 text-muted">Days Until This Trip</h6> <!-- TODO: COUNTDOWN -->
            <p class="card-text"><%= trip.start_date.strftime("%B %d, %Y") %> - <%= trip.end_date.strftime("%B %d, %Y") %></p>
            <a href="/trips/<%= trip.id %>" class="btn btn-sm btn-theme">View Trip</a>
          </div>
        </div>



      <% else %>

        <div class="card" style="width: 35rem;">
          <div class="card-body">
            <h4 class="card-title"><%= trip.trip_title %></h4>
            <h6 class="card-subtitle mb-2 text-muted">0 Days Until This Trip</h6>
            <p class="card-text">No Dates Yet</p>
            <a href="/trips/<%= trip.id %>" class="btn btn-sm btn-theme">View Trip</a>
          </div>
        </div>


      <% end %>   

    <% end %>
  </div>

<!-- ADD TRIP MODAL CONTENT -->

  <div class="modal fade modal-center" id="addTripModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-body no-pdd">
                    <div class="padding-30">
                        <h3 class="mrg-vertical-15">Add Trip</h3>
                        <%= form_tag "/trips", method: :post do  %>
                          <div class="modal-body">
                            <div class="form-group">
                              <label for="trip_title">Trip Title</label>
                              <input type="text" class="form-control" id="trip_title" name="trip_title" placeholder="New York, Destination Wedding, Etc.">
                            </div>
                            <div class="form-group">
                              <label for="start_date">From</label>
                              <input type="date" class="form-control" id="start_date" name="start_date">
                            </div>
                            <div class="form-group">
                              <label for="end_date">To</label>
                              <input type="date" class="form-control" id="end_date" name="end_date">
                            </div>
                          </div>
                          <div class="text-right mrg-top-20">
                            <button type="button" class="btn btn-md btn-default border-radius-4" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-md btn-theme border-radius-4">Add Trip</button>
                          </div>
                        <% end %>
                    </div>
                    <div class="modal-close">
                        <button type="button" class="btn icon-btn-md icon-btn-round btn-dark lh-0" data-dismiss="modal"><i class="ei ei-close"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>





